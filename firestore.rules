rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read and write only their own document
      allow read, write: if isOwner(userId);
      
      // Emission records subcollection
      match /records/{recordId} {
        // Users can read and write only their own records
        allow read, write: if isOwner(userId);
      }
      
      // Company profile subcollection
      match /company/{document=**} {
        // Users can read and write only their own company profile
        allow read, write: if isOwner(userId);
      }
    }
  }
}
