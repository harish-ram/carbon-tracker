{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply", "layer", "responsive", "screen"]
      }
    ],
    "declaration-block-trailing-semicolon": null
  },
  "ignoreFiles": ["node_modules/**", "dist/**"]
}
